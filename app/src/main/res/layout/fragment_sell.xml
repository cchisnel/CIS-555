<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/quote"
    android:background="#8BC34A">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/layout_corners"
        android:layout_alignTop="@+id/sellStock"
        android:layout_above="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView3"
        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sellStockButton"
        android:layout_alignTop="@+id/textView3"
        android:hint="SELL"
        android:layout_alignLeft="@+id/sellSharesAmount"
        android:layout_alignStart="@+id/sellSharesAmount"
        android:layout_alignRight="@+id/sellSharesAmount"
        android:layout_alignEnd="@+id/sellSharesAmount" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sellStockName"
        android:paddingTop="30dp"
        android:hint="Enter Tick Symbol"
        android:gravity="center_horizontal"
        android:layout_below="@+id/bankTextbox"
        android:layout_centerHorizontal="true"
        android:capitalize="characters"
        android:maxLines="1" android:singleLine="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sellSharesAmount"
        android:layout_alignRight="@+id/sellStockName"
        android:layout_alignEnd="@+id/sellStockName"
        android:layout_alignLeft="@+id/sellStockName"
        android:layout_alignStart="@+id/sellStockName"
        android:layout_below="@+id/sellStockName"
        android:hint="Enter Share Amt"
        android:gravity="center_horizontal"
        android:paddingBottom="15dp"
        android:maxLines="1" android:singleLine="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sell Stock"
        android:id="@+id/sellStock"
        android:paddingTop="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your bank:"
        android:id="@+id/bankTextbox"
        android:layout_below="@+id/sellStock"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:gravity="center_horizontal" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@drawable/layout_corners"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textView22" />

    <EditText
        android:id="@+id/setSymbolTextbox"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Enter Tick Symbol"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:capitalize="characters"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/searchButton"
        android:layout_alignRight="@+id/sellStockName"
        android:layout_alignEnd="@+id/sellStockName" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9dp"
        android:hint="SEARCH"
        android:layout_alignBottom="@+id/setSymbolTextbox"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_toRightOf="@+id/sellStockName"
        android:layout_toEndOf="@+id/sellStockName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Name"
        android:id="@+id/textView4"
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        android:layout_below="@+id/setSymbolTextbox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/symbolOutputTextbox"
        android:width="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingTop="20dp"
        android:text="Name"
        android:singleLine="true"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_toEndOf="@+id/sellStock"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Share Price"
        android:id="@+id/textView14"
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priceOutputTextbox"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingTop="20dp"
        android:text="Price"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignLeft="@+id/symbolOutputTextbox"
        android:layout_alignStart="@+id/symbolOutputTextbox"
        android:layout_alignRight="@+id/searchButton"
        android:layout_alignEnd="@+id/searchButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Change"
        android:id="@+id/textView22"
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/sellStock"
        android:layout_toStartOf="@+id/sellStock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stockChangeTextbox"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingTop="20dp"
        android:text="Change"
        android:paddingBottom="15dp"
        android:layout_alignTop="@+id/textView22"
        android:layout_alignLeft="@+id/priceOutputTextbox"
        android:layout_alignStart="@+id/priceOutputTextbox"
        android:layout_alignRight="@+id/searchButton"
        android:layout_alignEnd="@+id/searchButton" />


</RelativeLayout>