<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.capstone.hammond.wallstreetfantasyleaguefinal.WeeklyMatchFragment"
    android:background="#8BC34A">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnjoinleague"
        android:layout_alignParentBottom="true"
        android:hint="JOIN / CREATE LEAGUE"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:id="@+id/imageView4"
        android:background="@drawable/layout_corners"
        android:layout_above="@+id/btnjoinleague"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create / Join League"
        android:id="@+id/textView13"
        android:textSize="25dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txtTeamName"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="    Enter a league Name"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:capitalize="characters"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_alignRight="@+id/textView13"
        android:layout_alignEnd="@+id/textView13" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/imageView3"
        android:background="@drawable/layout_corners"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imageView4" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leagueList"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imageView4"
        tools:listitem="@android:layout/simple_list_item_1" 
        android:listSelector="@drawable/stock_selector"/>

</RelativeLayout>
