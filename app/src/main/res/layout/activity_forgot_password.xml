<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#8BC34A"
    android:title="ForgotPassword"
    tools:context=".ForgotPasswordActivity"
    android:weightSum="1"


    >

    <ImageView
        android:layout_width="325dp"
        android:layout_height="475dp"
        android:id="@+id/imageView8"
        android:background="@drawable/layout_corners"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reset Password"
        android:id="@+id/textView19"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please enter in the email address associated with you account. An email will be sent with a link allowing you to enter in a new password."
        android:id="@+id/textView20"
        android:layout_below="@+id/textView19"
        android:layout_alignRight="@+id/textView19"
        android:layout_alignEnd="@+id/textView19"
        android:layout_marginTop="38dp"
        android:layout_alignLeft="@+id/textView19"
        android:layout_alignStart="@+id/textView19" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailAddressTextbox"
        android:hint=" Email Address"
        android:editable="false"
        android:inputType="textEmailAddress"
        android:password="false"
        android:textStyle="normal"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView20"
        android:layout_alignStart="@+id/textView20"
        android:layout_alignRight="@+id/textView20"
        android:layout_alignEnd="@+id/textView20" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitButton"
        android:layout_below="@+id/emailAddressTextbox"
        android:layout_alignLeft="@+id/emailAddressTextbox"
        android:layout_alignStart="@+id/emailAddressTextbox"
        android:layout_alignRight="@+id/emailAddressTextbox"
        android:layout_alignEnd="@+id/emailAddressTextbox" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelButton"
        android:layout_below="@+id/submitButton"
        android:layout_alignLeft="@+id/submitButton"
        android:layout_alignStart="@+id/submitButton"
        android:layout_marginTop="35dp"
        android:layout_alignRight="@+id/submitButton"
        android:layout_alignEnd="@+id/submitButton" />

</RelativeLayout>